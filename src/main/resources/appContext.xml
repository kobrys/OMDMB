<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config />

    <bean id="omdmb" class="pl.edu.agh.omdmb.core.OMDMB" />

    <bean id="benchmarkConfigurationLoader" class="pl.edu.agh.omdmb.scenario.BenchmarkConfigurationLoader" />

    <bean id="benchmarkScenarioExecutor" class="pl.edu.agh.omdmb.scenario.BenchmarkScenarioExecutor" />

    <bean id="xmlConfigurationDigester" class="org.apache.commons.digester3.Digester" />

    <bean id="propertiesConfigurationLoader" class="pl.edu.agh.omdmb.scenario.configuration.PropertiesConfigurationLoader" />

    <bean id="xmlConfigurationLoader" class="pl.edu.agh.omdmb.scenario.configuration.XmlConfigurationLoader">
        <constructor-arg ref="xmlConfigurationRulesModule" />
    </bean>

    <bean id="xmlConfigurationRulesModule" class="pl.edu.agh.omdmb.scenario.configuration.XmlConfigurationRulesModule"/>

    <bean id="benchmarkScenarioBuilder" class="pl.edu.agh.omdmb.core.scenario.BenchmarkScenarioBuilder" />

    <bean id="persistenceUnitConfigurationBuilder" class="pl.edu.agh.omdmb.jpa.util.PersistenceUnitConfigurationBuilder" />

    <bean id="threadExecutor" class="com.sun.jmx.remote.internal.ClientNotifForwarder.LinearExecutor" />
</beans>